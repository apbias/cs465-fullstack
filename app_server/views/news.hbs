<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header}}
            
            <div id="contents">
                <div class="box">
                    <div>
                        <div id="news" class="body">
                            <div class="sidebar">
                                <h3>{{latestNews.title}}</h3>
                                <ul>
                                    {{#each latestNews.items}}
                                    <li>
                                        <a href="/{{link}}">{{title}}</a>
                                    </li>
                                    {{/each}}
                                </ul>

                                <h3>{{vacationTips.title}}</h3>
                                <ul>
                                    {{#each vacationTips.items}}
                                    <li>
                                        <a href="/{{link}}">{{title}}</a>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                            <div>
                                <h1>News</h1>
                                <img src="/images/{{featuredArticle.image}}" alt="Kayaking">
                                <h2>{{featuredArticle.title}}</h2>
                                <span class="time">
                                    {{featuredArticle.date}}<br>
                                    by: {{featuredArticle.author}}
                                </span>
                                
                                {{#each featuredArticle.content}}
                                <p>{{this}}</p>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            {{> footer}}
        </div>
    </div>
</body>
</html>
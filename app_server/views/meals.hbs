<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>Foods - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header}}
            
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>Meals</h1>
                            
                            {{#each meals}}
                            <div>
                                <h2><a href="/meals">{{title}}</a></h2>
                                <div class="infos">
                                    <a href="/meals">
                                        <img src="/images/{{image}}" alt="{{name}}" height="169" width="780">
                                        <span class="cover">{{name}}</span>
                                    </a>
                                     {{description}}
                                </div>
                            </div>
                            {{/each}}
                            
                        </div>
                    </div>
                </div>
            </div>
            
            {{> footer}}
        </div>
    </div>
</body>
</html>